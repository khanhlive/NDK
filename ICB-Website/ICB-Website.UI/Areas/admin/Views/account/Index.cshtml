@model List<ICB.Business.Models.Account>
@{
    ViewBag.Title = "Admin: Quản lý tài khoản";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<div data-controller="account">
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">Danh sách tài khoản</h3>
            
        </div>
        <div class="box-body">

            <table class="table table-striped jambo_table table-bordered dt-responsive no-wrap" id="ACCOUNT_ALLACCOUNT" data-multiple="multiple">
                <thead>
                    <tr>
                        <th>@*<input type="checkbox" name="checkall" class="checkboxall flat" />*@ </th>
                        <th>Tên đăng nhập</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Ngày tạo</th>
                        <th>Quyền</th>
                        <th>Chấp thuận</th>
                        <th>Đã khóa</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var account in Model)
                    {
                        <tr>
                            <td><input type="checkbox" class="flat" value="@account.ID" name="table_records"></td>
                            <td>@account.Username</td>
                            <td>@account.Fullname</td>
                            <td>@account.Email</td>
                            <td>@account.CreateTime.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            <td>@ICB.Business.Entities.Apps.RoleManager.GetDisplayName(account.Role)</td>
                            <td><span @if (account.IsActive) { <text> class="icheckbox_minimal-blue checked" </text>  } else { <text> class="icheckbox_minimal-blue" </text> }> </span></td>
                            <td><span @if (account.IsLocked) { <text> class="icheckbox_minimal-blue checked" </text>   } else { <text> class="icheckbox_minimal-blue" </text>  }> </span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

@section scripts{
    }
@Html.Partial("_partialAddAccount")

@Html.Partial("_partialEditAccount")

