@model ICB.Business.Models.SystemConfig
@{
    ViewBag.Title = "Admin: Giới thiệu";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div data-controller="gioithieu">
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">Thông tin giới thiệu công ty</h3>
        </div>
        @using (Html.BeginForm("AboutUsPOST", "setting", new { area = "admin" }, FormMethod.Post, new { @id = "frm-gioithieu" }))
        {
            @Html.AntiForgeryToken()
            <div class="box-body">
                <dic class="row">
                    <div class="col-md-10">
                        <span class="text-danger">@TempData["message"]</span>
                        <div class="form-group">
                            <label class="control-label">Tiêu đề:</label>
                            @Html.TextBoxFor(x => x.Name, new { @id = "txtName", @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-12">

                        <div class="form-group">
                            <label class="control-label">Nội dung:</label>
                            @Html.TextAreaFor(x => x.Content, new { @id = "txtContent", @class = "form-control" })
                        </div>
                    </div>
                </dic>
            </div>
            <div class="modal-footer">
                <button type="submit" id="btn-submit" class="btn btn-primary"><i class="fa fa-save"></i>&nbsp;&nbsp; Lưu</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-remove"></i>&nbsp;&nbsp; Hủy</button>
            </div>
        }

    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        //$('#txtContent').text(htmlUnescape($('#txtNoidung').val()));
        CKEDITOR.replace('txtContent', {
            customConfig: '/Plugins/ckeditor/config.js',
            height: 600
        });
    });
</script>
   


