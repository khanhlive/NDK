@model IEnumerable<ICB.Business.Models.Support>
@{
    ViewBag.Title = "Quản lý thông tin hỗ trợ";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div data-controller="supportinfo">

    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">Danh sách hỗ trợ</h3>
            <div class="box-tools pull-right">

                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
            </div>
        </div>
        <div class="box-body">
            <div class="margin-bottom">
                <a href="@Url.Action("Create", "support", new { area = "admin" })" class="btn btn-success"><i class="fa fa-plus"></i>&nbsp;Thêm mới</a>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-striped jambo_table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ảnh đại diện</th>
                            <th>Tên</th>
                            <th>Điện thoại</th>
                            <th>Email</th>
                            <th>Skype</th>
                            <th>Trạng thái</th>
                            <th colspan="3" class="text-center">Chức năng</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                        }
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@i</td>
                                <td><img class="img-thumbnail" src="@item.Thumbnail" style="height:40px;width:60px;" /></td>
                                <td>@item.Name</td>
                                <td>@item.Phone</td>
                                <td>@item.Email</td>
                                <td>@item.Skype</td>
                                <td>@item.Status</td>
                                <td width="50" class="text-center"><a href="@Url.Action("Edit", "support", new { area = "admin", id = item.ID })" class=" btn-sm btn-primary"><i class="fa fa-edit"></i></a></td>
                                <td width="50" class="text-center">
                                    @using (Html.BeginForm("Delete", "support", new { id = item.ID }, FormMethod.Post,new { @id="frm_delete_"+item.ID}))
                                    {
                                        <a href="javascript:$('#frm_delete_'+@item.ID).submit();" class=" btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                                    }
                                </td>
                            </tr>

                            i++;
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

